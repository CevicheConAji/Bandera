<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/cardview_shadow_end_color"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <!--app:layout_constraintBaseline_toTopOf="@id/Paquito"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/PaquitoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MotoPapi"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/Prueba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boton prueba"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/Bandera"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />

    <TextView
        android:id="@+id/Bandera1"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/yellow"
        />
    <TextView
        android:id="@+id/Bandera2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/red"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Bandera3"
            android:layout_width="1dp"
            android:layout_height="match_parent"

            />

    </LinearLayout>
</LinearLayout>